@model Web_Project.Models.Account

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <section class="content" style="padding-top:30px">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6 text-end text-danger text-uppercase">
                        Thông tin chi tiết
                    </div>
                    <div class="col-6 text-right">
                        <a href="@Url.Action("Edit", new { id = Model.id })" class="btn btn-sm btn-success"> <i class="fas fa-edit"></i> Edit </a>
                        <a href="@Url.Action("Index","Account")" class="btn btn-sm btn-success"> <i class="fas fa-long-arrow-alt-left"></i> Back </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.img)
                    </dt>

                    <dd class="col-sm-9">
                        <img src="@Url.Content("~/Theme/img/Foods/" + Model.img)" alt="Image" class="img-thumbnail" width="100" height="100" />
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.account1)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.account1)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.password)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.password)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.role_id)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.role_id)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.register_date)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.register_date)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.phone_number)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.phone_number)
                    </dd>
                </dl>
            </div>
        </div>
    </section>
</div>